{
  "manifest_version": 3,
  "name": "Token Cop",
  "version": "1.0",
  "description": "Infinite context",
  "content_scripts": [
    {
      "matches": ["https://grok.x.ai/*", "https://x.ai/*", "https://*.grok.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "permissions": [],
  "host_permissions": ["https://*/*"],
"content_security_policy": {
  "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
}  }
